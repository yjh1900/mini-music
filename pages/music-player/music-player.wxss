/* pages/music-player/music-player.wxss */
.music-player{
  position: relative;
  width: 100%;
  height: 100%;
  background: -webkit-radial-gradient(circle, #5e5745,#251d16);
}

.music-player-title{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
}

.music-title{
  color: #fff;
  letter-spacing: 2rpx;
  font-size: 18px;
}

.music-author{
  color:#9e9a99;
}

.music-needle{
  position: absolute;
  left: 50%;
  top: 140rpx;
  margin-left: -30rpx;
  transform-origin: 12px 12px;
  transition: 1s transform;
  width: 170rpx;
  z-index: 10;
}

.music-needle-transition{
  transform: rotate(-30deg);
}

.music-img-wrap{
  margin-top: 180rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.music-disc{
  width: 550rpx;
}

.music-img{
  position: absolute;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
  
}

/* 旋转动画 */
@keyframes xuanzhuan {
  0%{
      transform: rotate(0deg);
  }
  100%{
      transform: rotate(360deg);
  }
}

.animation-rotate{
  animation: xuanzhuan 8s linear infinite;
}

.animation-paused{
  animation-play-state: paused;
}

.music-player-wrap{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx 40rpx;
}

.music-time-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  color: #9e928d;
}

.music-line-wrap{
  width: 500rpx;
  position: relative;
  height: 1px;
  background-color: #5a4d45;
}
.music-active-line{
  position: absolute;
  height: 100%;
  left: 0;
  top: 0;
  width: 50rpx;
  background-color: #857c75;
}

.music-active-point{
  position: absolute;
  left: 54rpx;
  transform:translateY(-50%) ;
  top: 50%;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #fff;
}

.music-btns-wrap{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #9e928d;
}

.music-btns-wrap .iconfont{
  font-size: 26px;
}

.music-btns-wrap .icon-play, .music-btns-wrap .icon-pause{
  font-size: 52px;
}