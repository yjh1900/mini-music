/* pages/daily-recommendation/daily-recommendation.wxss */
.daily{
  padding: 0 20rpx;
  height: 100%;
  box-sizing: border-box;
}
.daily-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}
.daily-header-wrap{
  display: flex;
  align-items: center;
}

.icon-play-filling{
  font-size: 20px;
  color: #ff383b;
  margin-right: 20rpx;
}
.daily-header-title{
  font-size: 18px;
  font-weight: 700;
}

.icon-playlist{
  font-size: 20px;
}

.daily-songs-container{
  height: calc(100% - 100rpx);
}

.daily-songs-item{
  height: 100rpx;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.daily-songs-wrap{
  display: flex;
  font-size: 14px;
}

.daily-songs-img-wrap{
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  text-align: center;
  line-height: 120rpx;
}
.daily-songs-img{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.icon-bar{
  color: #ff383b;
  font-size: 25px;
}
.daily-text-wrap{
  display: flex;
  flex-direction: column;
}
.daily-name{
  font-size: 16px;
  letter-spacing: 2rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  display: -webkit-box; /* 作为弹性伸缩盒子模型显示。*/
  -webkit-box-orient: vertical; /* 设置伸缩盒子的子元素排列方式：从上到下垂直排列 */
  -webkit-line-clamp: 1; /* 显示的行数 */
}
.daily-name-pre{
  color: #bdbdc9;
  margin-left: 10rpx;
}
.daily-author{
  color: #aaaaaa;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box; /* 作为弹性伸缩盒子模型显示。*/
  -webkit-line-clamp: 1; /* 显示的行数 */
  -webkit-box-orient: vertical; /* 设置伸缩盒子的子元素排列方式：从上到下垂直排列 */
}
.icon-more{
  color: #aaaaaa;
  font-size: 25px;
}
